<div class="login">
  <div class="loginBox">
    <%= render("shared/login_toggle", active: "sign_in") %>
    <%= form_for(:session, url: sign_in_path) do |f| %>
      <%= render "shared/external_sign_in" %>
      <div class="login-inputs">
        <p>Or sign in using your email:</p>

        <%= f.email_field(:email,
          class: "input-block-level flat-input small-input",
          placeholder: "Email") %>

        <%= f.password_field(:password,
          class: "input-block-level flat-input small-input",
          placeholder: "Password") %>

        <%= content_tag(:p, flash[:error],
          class: "text-error") if flash[:error].present? %>

        <button class="flat-btn normal-btn">Sign in</button>
        <p class="forgotPassword">
          <%= link_to("Forgot your password?", new_password_path,
            title: "Forgot your password?") %>
        </p>
      </div>
    <% end %>
  </div>
</div>